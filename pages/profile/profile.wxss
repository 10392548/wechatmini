/**pages/profile/profile.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  width: 100%;
  overflow-x: hidden;
}
.page-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

/* 区块 */
.section {
  margin-bottom: 32rpx;
}
.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

/* 头像区域 */
.avatar-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}
.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 表单列表 */
.form-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.form-item:last-child {
  border-bottom: none;
}
.form-label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
}
.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}
.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  text-align: right;
}

/* 保存按钮 */
.save-btn {
  background: linear-gradient(135deg, #FF8C00, #FFA500);
  border-radius: 48rpx;
  padding: 28rpx;
  text-align: center;
  margin-top: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}
