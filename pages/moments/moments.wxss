/**moments.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
}
.moment-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-info {
  flex: 1;
}
.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.time-location {
  font-size: 24rpx;
  color: #999;
}
.moment-image-placeholder {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #e0e0e0, #f5f5f5);
}
.moment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}
.moment-footer {
  display: flex;
  align-items: center;
}
.action-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
}
.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.icon {
  font-size: 32rpx;
}
.count {
  font-size: 24rpx;
  color: #999;
}
.action-share {
  margin-left: auto;
}

/* 点赞状态 */
.action-item.liked .count {
  color: #FF6B6B;
}

/* 评论区域 */
.comments-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}
.comment-item {
  margin-bottom: 16rpx;
}
.comment-main {
  margin-bottom: 8rpx;
}
.comment-nickname {
  font-size: 26rpx;
  color: #576b95;
  margin-right: 12rpx;
}
.comment-content {
  font-size: 26rpx;
  color: #333;
}
.comment-time {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}
.reply-item {
  margin-top: 8rpx;
  padding-left: 24rpx;
}
.reply-nickname {
  font-size: 24rpx;
  color: #576b95;
  margin-right: 12rpx;
}
.reply-content {
  font-size: 24rpx;
  color: #333;
}
.reply-time {
  font-size: 20rpx;
  color: #999;
  margin-left: 12rpx;
}
