/**moments.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #FFF9F5 0%, #FFF0E8 100%);
}

/* 悬浮发布按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 100rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 105, 0.4);
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 64rpx;
  color: #FFFFFF;
  font-weight: 300;
  line-height: 1;
}

.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
}
.moment-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 105, 0.08);
}
.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.user-info {
  flex: 1;
}
.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.time-location {
  font-size: 24rpx;
  color: #B0B0B0;
}

.moment-content {
  font-size: 30rpx;
  color: #2D2D2D;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 图片网格 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.moment-image {
  border-radius: 12rpx;
}

/* 1张图片 */
.images-1 .moment-image {
  width: 100%;
  height: 400rpx;
}

/* 2-4张图片 */
.images-2 .moment-image,
.images-3 .moment-image,
.images-4 .moment-image {
  width: calc(50% - 4rpx);
  height: 220rpx;
}

/* 5-9张图片 */
.images-5 .moment-image,
.images-6 .moment-image,
.images-7 .moment-image,
.images-8 .moment-image,
.images-9 .moment-image {
  width: calc(33.33% - 6rpx);
  height: 220rpx;
}
.moment-footer {
  display: flex;
  align-items: center;
}
.action-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
}
.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.icon {
  font-size: 32rpx;
}
.count {
  font-size: 24rpx;
  color: #999;
}
.action-share {
  margin-left: auto;
}

/* 点赞状态 */
.action-item.liked .count {
  color: #FF8C69;
}

/* 评论区域 */
.comments-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.comment-item {
  margin-bottom: 20rpx;
}

.comment-main {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.comment-nickname {
  font-size: 26rpx;
  color: #FF8C69;
  font-weight: 600;
}

.comment-content {
  font-size: 26rpx;
  color: #2D2D2D;
  flex: 1;
}

.comment-time {
  font-size: 22rpx;
  color: #B0B0B0;
  padding-left: 8rpx;
}

/* 评论输入框 */
.comment-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
  padding: 16rpx;
  background: #F8F8F8;
  border-radius: 24rpx;
}

.comment-input {
  flex: 1;
  font-size: 28rpx;
  color: #2D2D2D;
  background: transparent;
}

.comment-send-btn {
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-radius: 20rpx;
  flex-shrink: 0;
}

.send-text {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 600;
}
