/* 全局样式 */
page {
  height: 100vh;
  background: linear-gradient(180deg, #FFF9F5 0%, #FFF0E8 100%);
}

.publish-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content-area {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 140rpx;
  overflow-y: auto;
}

/* 输入区域 */
.input-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 105, 0.08);
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #2D2D2D;
}

.input-placeholder {
  color: #B0B0B0;
}

/* 图片网格 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.image-item {
  position: relative;
  width: calc(33.33% - 11rpx);
  height: 220rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 300;
  line-height: 1;
}

.add-image-btn {
  width: calc(33.33% - 11rpx);
  height: 220rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  border: 3rpx dashed #FFB88C;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 105, 0.08);
}

.add-icon {
  font-size: 60rpx;
  color: #FFB88C;
  font-weight: 300;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #FFB88C;
}

/* 提示信息 */
.tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  background: rgba(255, 184, 140, 0.1);
  border-radius: 16rpx;
  border-left: 4rpx solid #FFB88C;
}

.tip-text {
  font-size: 24rpx;
  color: #8A8A8A;
  line-height: 1.5;
}

/* 发布按钮区域 */
.publish-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, rgba(255, 249, 245, 0) 0%, rgba(255, 249, 245, 0.98) 20%, rgba(255, 249, 245, 1) 100%);
  backdrop-filter: blur(20rpx);
}

.publish-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border: none;
  border-radius: 48rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 105, 0.35);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.publish-btn::after {
  border: none;
}

.publish-btn:active:not(.disabled) {
  transform: scale(0.98);
}

.publish-btn.disabled {
  background: #D0D0D0;
  box-shadow: none;
  opacity: 0.6;
}
