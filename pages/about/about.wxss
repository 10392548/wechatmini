/**pages/about/about.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  width: 100%;
  overflow-x: hidden;
}
.page-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}
.page-content::-webkit-scrollbar {
  display: none;
}

/* Logo区域 */
.logo-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}
.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.app-version {
  font-size: 24rpx;
  color: #999;
}

/* 通用卡片 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 介绍文本 */
.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 功能列表 */
.feature-list {
  display: flex;
  flex-direction: column;
}
.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.feature-item:last-child {
  border-bottom: none;
}
.feature-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}
.feature-text {
  font-size: 28rpx;
  color: #333;
}

/* 联系列表 */
.contact-list {
  display: flex;
  flex-direction: column;
}
.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.contact-item:last-child {
  border-bottom: none;
}
.contact-label {
  font-size: 28rpx;
  color: #666;
}
.contact-value {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

/* 版权信息 */
.copyright {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}
