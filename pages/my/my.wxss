/**pages/my/my.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  width: 100%;
  overflow-x: hidden;
}
.page-content {
  flex: 1;
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}
.page-content::-webkit-scrollbar {
  display: none;
}

/* 个人信息卡片 */
.profile-card {
  background: linear-gradient(135deg, #FF8C00, #FFA500);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}
.profile-header {
  display: flex;
  align-items: center;
}
.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3);
  margin-right: 24rpx;
}
.profile-info {
  flex: 1;
}
.profile-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}
.profile-id {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}
.edit-btn {
  background: rgba(255,255,255,0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #fff;
}

/* 通用卡片 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 菜单列表 */
.menu-list {
  background: #f9f9f9;
  border-radius: 16rpx;
  overflow: hidden;
}
.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.menu-item:last-child {
  border-bottom: none;
}
.menu-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}
.icon-img {
  width: 40rpx;
  height: 40rpx;
}
.menu-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录按钮 */
.logout-btn {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #FF3B30;
  font-weight: 500;
}

/* 已绑定设备列表 */
.device-list {
  background: #f9f9f9;
  border-radius: 16rpx;
  overflow: hidden;
}
.device-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.device-item:last-child {
  border-bottom: none;
}
.device-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}
.device-info {
  flex: 1;
}
.device-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}
.device-imei {
  font-size: 24rpx;
  color: #999;
  word-break: break-all;
}
.device-time {
  font-size: 22rpx;
  color: #999;
}
