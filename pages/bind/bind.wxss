/* ===== 全局样式 ===== */
page {
  height: 100vh;
  background: linear-gradient(180deg, #FFFAF5 0%, #FFF5EB 100%);
}

.bind-page {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

/* ===== 顶部波浪装饰 ===== */
.wave-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  overflow: hidden;
  z-index: 0;
}

.wave {
  position: absolute;
  width: 200%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(90deg, rgba(255, 140, 0, 0.1), rgba(255, 165, 0, 0.15));
}

.wave-1 {
  top: -60%;
  left: -50%;
  animation: wave-float 8s ease-in-out infinite;
}

.wave-2 {
  top: -40%;
  right: -50%;
  animation: wave-float 10s ease-in-out infinite reverse;
}

@keyframes wave-float {
  0%, 100% { transform: translateX(0) translateY(0); }
  50% { transform: translateX(5%) translateY(-2%); }
}

/* ===== 内容滚动区 ===== */
.content-scroll {
  position: relative;
  height: 100%;
  padding: 0 32rpx 40rpx;
  z-index: 1;
}

/* ===== 头部区域 ===== */
.header-section {
  text-align: center;
  padding: 40rpx 0 50rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #2D2D2D;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.subtitle-text {
  font-size: 26rpx;
  color: #8A8A8A;
  font-weight: 400;
}

/* ===== 模式切换器 ===== */
.toggle-container {
  margin-bottom: 40rpx;
}

.toggle-track {
  position: relative;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 44rpx;
  padding: 6rpx;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.12);
}

.toggle-indicator {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  width: calc(50% - 6rpx);
  height: 76rpx;
  background: linear-gradient(135deg, #FF9500 0%, #FFB347 100%);
  border-radius: 38rpx;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

.toggle-indicator.left {
  transform: translateX(0);
}

.toggle-indicator.right {
  transform: translateX(100%);
}

.toggle-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #8A8A8A;
  position: relative;
  z-index: 2;
  transition: color 0.3s;
}

.toggle-option.active {
  color: #FFFFFF;
}

/* ===== 新建宠物表单 ===== */
.form-container {
  margin-bottom: 40rpx;
}

/* 头像上传区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-ring {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.avatar-pulse {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFB347 0%, #FF9500 100%);
  opacity: 0.2;
  animation: avatar-pulse 2s ease-in-out infinite;
}

@keyframes avatar-pulse {
  0%, 100% { transform: scale(1); opacity: 0.2; }
  50% { transform: scale(1.05); opacity: 0.1; }
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(255, 149, 0, 0.25);
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFF5EB 0%, #FFE8CC 100%);
  border: 4rpx dashed #FFB347;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 149, 0, 0.1);
}

.upload-hint {
  font-size: 24rpx;
  color: #FF9500;
  font-weight: 600;
}

.avatar-label {
  font-size: 26rpx;
  color: #FF9500;
  font-weight: 600;
  padding: 12rpx 24rpx;
  background: #FFF5EB;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}

/* 表单输入组 */
.input-card-group {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.input-row {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.input-row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.input-wrapper {
  flex: 1;
}

.input-label {
  font-size: 24rpx;
  color: #8A8A8A;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.required-mark {
  color: #FF4D4F;
  margin-left: 4rpx;
}

.clean-input {
  width: 100%;
  font-size: 30rpx;
  color: #2D2D2D;
  font-weight: 500;
}

/* 性别选择卡片 */
.gender-card {
  margin-top: 24rpx;
  padding: 24rpx 0 0;
}

.gender-label {
  font-size: 26rpx;
  color: #8A8A8A;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.gender-buttons {
  display: flex;
  margin: 0 -10rpx;
}

.gender-btn {
  flex: 1;
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.gender-btn .gender-emoji {
  margin-right: 8rpx;
}

.gender-emoji {
  font-size: 36rpx;
  margin-right: 4rpx;
}

.gender-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #8A8A8A;
}

.gender-btn.male-active {
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  border-color: #64B5F6;
}

.gender-btn.male-active .gender-text {
  color: #1976D2;
}

.gender-btn.female-active {
  background: linear-gradient(135deg, #FCE4EC 0%, #F8BBD0 100%);
  border-color: #F06292;
}

.gender-btn.female-active .gender-text {
  color: #C2185B;
}

/* ===== 已有宠物列表 ===== */
.pets-container {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2D2D2D;
}

.pets-grid {
  display: flex;
  flex-direction: column;
}

.pet-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 16rpx;
}

.pet-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.pet-card.selected {
  border-color: #FF9500;
  box-shadow: 0 4rpx 16rpx rgba(255, 149, 0, 0.2);
}

.pet-card-inner {
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: relative;
}

.pet-card-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.pet-card-info {
  flex: 1;
}

.pet-card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D2D2D;
  margin-bottom: 6rpx;
}

.pet-card-breed {
  font-size: 24rpx;
  color: #8A8A8A;
}

.check-badge {
  width: 44rpx;
  height: 44rpx;
  background: linear-gradient(135deg, #FF9500 0%, #FFB347 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: 700;
}

/* ===== 设备信息区域 ===== */
.device-section {
  margin-bottom: 40rpx;
}

.imei-input-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.imei-left {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.imei-text-group {
  display: flex;
  flex-direction: column;
}

.imei-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D2D2D;
  margin-bottom: 4rpx;
}

.imei-hint {
  font-size: 22rpx;
  color: #8A8A8A;
}

.imei-field {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #2D2D2D;
  text-align: right;
}

/* 提示卡片 */
.hint-card {
  background: linear-gradient(135deg, #FFF9F0 0%, #FFF5EB 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border-left: 4rpx solid #FFB347;
}

.hint-row {
  margin-bottom: 12rpx;
}

.hint-row:last-child {
  margin-bottom: 0;
}

.hint-text {
  font-size: 24rpx;
  color: #8A8A8A;
  line-height: 1.6;
}

/* ===== 底部按钮 ===== */
.bottom-action {
  padding: 20rpx 0 40rpx;
}

.bind-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF9500 0%, #FFB347 100%);
  border: none;
  border-radius: 48rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 149, 0, 0.35);
  transition: all 0.3s;
}

.bind-btn::after {
  border: none;
}

.bind-btn.loading {
  opacity: 0.7;
}

.bind-btn[disabled] {
  background: #D0D0D0;
  box-shadow: none;
  opacity: 0.6;
}
