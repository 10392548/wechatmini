/* pages/battery/battery.wxss */
page {
  height: 100vh;
  background: #f5f5f5;
}

.page {
  min-height: 100vh;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

/* ========== 电池主卡片 ========== */
.battery-card {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  border-radius: 28rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.battery-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
}

.battery-card.medium {
  background: linear-gradient(135deg, #FF9800 0%, #FFA726 100%);
}

.battery-card.low {
  background: linear-gradient(135deg, #F44336 0%, #EF5350 100%);
}

.battery-card.charging {
  background: linear-gradient(135deg, #2196F3 0%, #42A5F5 100%);
}

.battery-visual {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* 电池图标 */
.battery-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.battery-head {
  width: 80rpx;
  height: 16rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 8rpx 8rpx 0 0;
  margin-bottom: 4rpx;
}

.battery-body {
  width: 160rpx;
  height: 280rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 16rpx;
  padding: 8rpx;
  position: relative;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.battery-fill {
  width: 100%;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.5s ease;
  position: relative;
  overflow: hidden;
}

.battery-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* 充电指示器 */
.charging-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.lightning {
  width: 60rpx;
  height: 60rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white"><path d="M13 2L3 14h8l-1 8 10-12h-8l1-8z"/></svg>') center/contain no-repeat;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
}

/* 百分比显示 */
.battery-percent-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.percent-number {
  font-size: 120rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Helvetica Neue', sans-serif;
}

.percent-symbol {
  font-size: 48rpx;
  font-weight: 500;
  color: rgba(255,255,255,0.8);
  margin-left: 8rpx;
}

/* 状态信息 */
.battery-status-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 16rpx;
}

.status-text {
  font-size: 28rpx;
  color: rgba(255,255,255,0.95);
  margin-bottom: 8rpx;
}

.estimate-time {
  font-size: 24rpx;
  color: rgba(255,255,255,0.7);
}

/* ========== 设备状态卡片 ========== */
.status-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.status-header {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #E8F5E9;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  position: relative;
}

.status-icon.offline {
  background: #FFEBEE;
}

.status-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #4CAF50;
  box-shadow: 0 0 0 6rpx rgba(76, 175, 80, 0.2);
  animation: breathe 2s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { box-shadow: 0 0 0 6rpx rgba(76, 175, 80, 0.2); }
  50% { box-shadow: 0 0 0 12rpx rgba(76, 175, 80, 0.1); }
}

.status-icon.offline .status-dot {
  background: #9E9E9E;
  box-shadow: none;
  animation: none;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.status-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #4CAF50;
}

.status-value.offline {
  color: #9E9E9E;
}

.status-footer {
  padding-top: 16rpx;
}

.last-online {
  font-size: 24rpx;
  color: #999;
}

/* ========== 功能设置卡片 ========== */
.settings-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 28rpx;
}

.setting-item.border-top {
  border-top: 1rpx solid #f0f0f0;
}

.setting-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.setting-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon-emoji {
  font-size: 36rpx;
}

.setting-info {
  display: flex;
  flex-direction: column;
}

.setting-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
}

.setting-arrow {
  font-size: 28rpx;
  color: #999;
  padding-left: 20rpx;
}

/* ========== 电量消耗卡片 ========== */
.usage-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
}

.usage-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.usage-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.usage-period {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.usage-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.usage-item {
  display: flex;
  flex-direction: column;
}

.usage-item-left {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.usage-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.usage-name {
  font-size: 26rpx;
  color: #666;
}

.usage-bar-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.usage-bar {
  flex: 1;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.usage-bar-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.usage-bar-fill.blue {
  background: linear-gradient(90deg, #2196F3, #42A5F5);
}

.usage-bar-fill.orange {
  background: linear-gradient(90deg, #FF9800, #FFA726);
}

.usage-bar-fill.green {
  background: linear-gradient(90deg, #4CAF50, #66BB6A);
}

.usage-percent {
  font-size: 24rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

/* ========== 电池健康卡片 ========== */
.health-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
}

.health-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.health-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.health-icon .icon-emoji {
  font-size: 28rpx;
}

.health-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.health-title {
  font-size: 26rpx;
  color: #666;
}

.health-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #4CAF50;
}

.health-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.health-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #66BB6A, #81C784);
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

.health-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: center;
}

/* ========== 离线提示 ========== */
.offline-tip {
  background: #fff;
  border-radius: 20rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.tip-icon-img {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.tip-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.tip-sub {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* ========== 调试开关 ========== */
.debug-switch {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.debug-label {
  font-size: 28rpx;
  color: #666;
}

.debug-status {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}
