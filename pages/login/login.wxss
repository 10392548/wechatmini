page {
  height: 100vh;
  background: linear-gradient(135deg, #FF8C00 0%, #FFA500 100%);
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 60rpx;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: white;
  padding: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-top: 60rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 20rpx;
}

.login-btn {
  width: 500rpx;
  height: 88rpx;
  background: white;
  color: #FF8C00;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
