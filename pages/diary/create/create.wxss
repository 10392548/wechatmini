/**pages/diary/create/create.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #FFF9F5 0%, #FFF5EC 100%);
}

/* 页面容器 */
.page-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 滚动区域 */
.content-scroll {
  flex: 1;
  height: 0;
}

.content-inner {
  padding: 20rpx 24rpx;
}

/* 顶部装饰 */
.header-decoration {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 32rpx;
}

.header-image {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 16rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 0, 0.08);
}

/* 卡片标签 */
.card-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.label-required {
  font-size: 28rpx;
  color: #FF8C00;
  margin-left: 4rpx;
}

.char-count {
  margin-left: auto;
  font-size: 24rpx;
  color: #ccc;
}

/* 类型选择网格 */
.type-grid {
  display: flex;
  gap: 16rpx;
}

.type-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  background: #fff;
  transition: all 0.3s ease;
}

.type-card.active {
  border-color: #FF8C00;
  background: linear-gradient(135deg, rgba(255, 140, 0, 0.1) 0%, rgba(255, 165, 0, 0.1) 100%);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 0, 0.2);
}

.type-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  background: #f0f0f0;
}

.type-image {
  width: 48rpx;
  height: 48rpx;
}

.type-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.type-desc {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* 输入框 */
.input-wrapper {
  display: flex;
  align-items: center;
  background: #f9f9f9;
  border-radius: 20rpx;
  padding: 0 24rpx;
  min-height: 88rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  background: #fff;
  box-shadow: 0 0 0 2rpx #FF8C00;
}

.title-input {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  color: #333;
}

.input-placeholder {
  color: #ccc;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 文本域 */
.textarea-wrapper {
  background: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  transition: all 0.3s ease;
}

.textarea-wrapper:focus-within {
  background: #fff;
  box-shadow: 0 0 0 2rpx #FF8C00;
}

.content-input {
  width: 100%;
  min-height: 180rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 底部间距 */
.bottom-spacer {
  height: 120rpx;
}

/* 底部提交栏 */
.submit-bar {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 105, 0.4);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 105, 0.3);
}

.submit-btn.loading {
  opacity: 0.7;
}

.btn-content {
  display: flex;
  align-items: center;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.btn-loading {
  display: flex;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #fff;
}

/* 类型选择动画 */
.type-card {
  animation: fadeInUp 0.4s ease-out backwards;
}

.type-card:nth-child(1) { animation-delay: 0.05s; }
.type-card:nth-child(2) { animation-delay: 0.1s; }
.type-card:nth-child(3) { animation-delay: 0.15s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
