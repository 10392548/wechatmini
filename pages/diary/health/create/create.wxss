/**pages/diary/health/create/create.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #FFF9F5 0%, #FFF5EC 100%);
}

.page-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.content-scroll {
  flex: 1;
  height: 0;
}

.content-inner {
  padding: 20rpx 24rpx;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 0, 0.08);
}

.form-row {
  display: flex;
  gap: 16rpx;
}

.form-row .form-card {
  flex: 1;
  margin-bottom: 0;
}

.form-row .form-card:first-child {
  margin-bottom: 20rpx;
}

/* 卡片标签 */
.card-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.label-required {
  font-size: 28rpx;
  color: #FF8C00;
  margin-left: 4rpx;
}

.char-count {
  margin-left: auto;
  font-size: 24rpx;
  color: #ccc;
}

/* 类型选择网格 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.type-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  background: #fff;
  transition: all 0.3s ease;
}

.type-card.active {
  border-color: #FF8C00;
  background: linear-gradient(135deg, rgba(255, 140, 0, 0.1) 0%, rgba(255, 165, 0, 0.1) 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 0, 0.2);
}

.type-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  background: #f0f0f0;
}

.type-emoji {
  font-size: 32rpx;
}

.type-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

/* 输入框 */
.input-wrapper {
  background: #f9f9f9;
  border-radius: 20rpx;
  padding: 0 20rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.form-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.input-placeholder {
  color: #ccc;
}

/* 日期选择器 */
.date-wrapper {
  background: #f9f9f9;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-text {
  font-size: 28rpx;
  color: #333;
}

.date-text.placeholder {
  color: #ccc;
}

.date-icon {
  font-size: 32rpx;
}

/* 文本域 */
.textarea-wrapper {
  background: #f9f9f9;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 底部间距 */
.bottom-spacer {
  height: 140rpx;
}

/* 底部提交栏 */
.submit-bar {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 105, 0.4);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-btn.loading {
  opacity: 0.7;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
