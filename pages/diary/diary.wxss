/**pages/diary/diary.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #FFF9F5 0%, #FFF5EC 100%);
}

/* 页面容器 */
.page-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 标签切换 */
.tabs-wrapper {
  padding: 20rpx 24rpx 0;
}

.tabs-card {
  display: flex;
  background: #fff;
  border-radius: 24rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 0, 0.08);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #FF8C00;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #FF8C00, #FFA500);
  border-radius: 3rpx;
}

/* 滚动区域 */
.content-scroll {
  flex: 1;
  height: 0;
}

.content-inner {
  padding: 20rpx 24rpx 40rpx;
  min-height: 100%;
}

/* 日志列表 */
.logs-container {
  display: flex;
  flex-direction: column;
}

/* 时间线风格的日志项 */
.log-item {
  display: flex;
  margin-bottom: 24rpx;
}

.log-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.log-time-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  position: relative;
}

.log-time {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  writing-mode: vertical-rl;
  text-orientation: upright;
  letter-spacing: 4rpx;
}

.log-card {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  border-left: 6rpx solid #2196F3;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.log-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.log-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: #f0f0f0;
}

.log-icon {
  width: 48rpx;
  height: 48rpx;
}

.log-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.log-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.log-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 健康报告卡片 */
.health-item {
  margin-bottom: 24rpx;
}

.health-card {
  background: #f8fbff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.health-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.health-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
}

.health-icon-img {
  width: 36rpx;
  height: 36rpx;
}

.health-time {
  font-size: 24rpx;
  color: #999;
}

.health-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.health-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-image {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 浮动创建按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 100rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 140, 105, 0.5);
  z-index: 100;
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
  position: relative;
  z-index: 2;
}

.fab-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  animation: ripple 2s ease-out infinite;
}

@keyframes ripple {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.6);
    opacity: 0;
  }
}

.fab:active {
  transform: scale(0.95);
}
