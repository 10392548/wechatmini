/**pages/diary/diary.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.page-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

/* 标签切换 */
.tabs-container {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.tab-item {
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  background: #f0f0f0;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #333;
  color: #fff;
}

/* 时间线列表 */
.diary-list {
  flex: 1;
  padding: 20rpx 30rpx;
  padding-bottom: 40rpx;
}

.diary-item {
  display: flex;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  transition: transform 0.2s ease;
}

.diary-item:active {
  transform: scale(0.98);
}

.item-left {
  margin-right: 24rpx;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 太阳图标 */
.icon-sun {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.sun-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border-radius: 50%;
}

.sun-ray {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 50%;
}

.ray1 { top: 0; left: 50%; transform: translateX(-50%); }
.ray2 { bottom: 0; left: 50%; transform: translateX(-50%); }
.ray3 { left: 0; top: 50%; transform: translateY(-50%); }
.ray4 { right: 0; top: 50%; transform: translateY(-50%); }

/* 心形图标 */
.icon-heart {
  width: 32rpx;
  height: 28rpx;
  background: #fff;
  position: relative;
  transform: rotate(-45deg);
  border-radius: 0 0 0 8rpx;
}

.icon-heart::before,
.icon-heart::after {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
}

.icon-heart::before {
  top: -14rpx;
  left: 0;
}

.icon-heart::after {
  left: 14rpx;
  top: 0;
}

/* 花朵图标 */
.icon-flower {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.petal {
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
}

.p1 { top: 4rpx; left: 50%; transform: translateX(-50%); }
.p2 { bottom: 4rpx; left: 50%; transform: translateX(-50%); }
.p3 { left: 4rpx; top: 50%; transform: translateY(-50%); }
.p4 { right: 4rpx; top: 50%; transform: translateY(-50%); }

.flower-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
}

/* 爪印图标 */
.icon-paw {
  position: relative;
  width: 36rpx;
  height: 36rpx;
}

.paw-pad {
  position: absolute;
  background: #fff;
  border-radius: 50%;
}

.paw-pad.main {
  width: 20rpx;
  height: 16rpx;
  bottom: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50% 50% 50% 50%;
}

.paw-pad.t1 {
  width: 10rpx;
  height: 10rpx;
  top: 4rpx;
  left: 4rpx;
}

.paw-pad.t2 {
  width: 10rpx;
  height: 10rpx;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.paw-pad.t3 {
  width: 10rpx;
  height: 10rpx;
  top: 4rpx;
  right: 4rpx;
}

/* 星星图标 */
.icon-star {
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-bottom: 24rpx solid #fff;
  position: relative;
}

.icon-star::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: -16rpx;
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-top: 24rpx solid #fff;
}

/* 月亮图标 */
.icon-moon {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 10rpx -6rpx 0 0 rgba(88, 86, 214, 1) inset;
}

/* 活动图标 */
.icon-activity {
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
  height: 28rpx;
}

.bar {
  width: 8rpx;
  background: #fff;
  border-radius: 4rpx;
}

.bar.b1 { height: 12rpx; }
.bar.b2 { height: 20rpx; }
.bar.b3 { height: 28rpx; }

/* 内容区域 */
.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
