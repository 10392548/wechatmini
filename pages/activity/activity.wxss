page {
  background: #f5f5f5;
}

.page-content {
  padding: 20rpx 24rpx 40rpx;
  min-height: 100vh;
}

.calorie-card {
  background: #fff;
  margin-bottom: 24rpx;
  padding: 32rpx 28rpx;
  border-radius: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #999;
}

.value-row {
  display: flex;
  align-items: baseline;
  margin: 10rpx 0;
}

.value {
  font-size: 80rpx;
  font-weight: 700;
  color: #333;
}

.unit {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.compare {
  font-size: 26rpx;
  color: #FF8C42;
}

.map-container {
  background: #fff;
  margin-bottom: 24rpx;
  padding: 0;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.map-canvas {
  width: 100%;
  height: 500rpx;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  flex-direction: column;
}

.control-btn {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

.map-info {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: #fff;
}

.map-label {
  font-size: 26rpx;
  color: #666;
}

.stats-row {
  display: flex;
  margin-bottom: 24rpx;
}
.stats-row .stat-card:first-child {
  margin-right: 16rpx;
}

.stat-card {
  flex: 1;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  color: #fff;
}

.stat-card.blue {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

.stat-card.purple {
  background: linear-gradient(135deg, #7B68EE 0%, #6A5ACD 100%);
}

.stat-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 20rpx;
}

.stat-label {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
}

.detail-section {
  background: #fff;
  padding: 28rpx;
  border-radius: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.detail-list {
  display: flex;
  flex-direction: column;
}
.detail-list .detail-item {
  margin-bottom: 16rpx;
}
.detail-list .detail-item:last-child {
  margin-bottom: 0;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.detail-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.detail-icon.green {
  background: #E8F5E9;
}

.detail-icon.yellow {
  background: #FFF9E6;
}

.detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.detail-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.detail-time {
  font-size: 24rpx;
  color: #999;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}
