page {
  background: #f5f5f5;
}

.page-content {
  padding: 20rpx 24rpx 40rpx;
  min-height: 100vh;
}

/* 地图容器 */
.map-container {
  background: #fff;
  margin-bottom: 24rpx;
  padding: 0;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.map-canvas {
  width: 100%;
  height: 500rpx;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  flex-direction: column;
}

.control-btn {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

.map-info {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.map-label {
  font-size: 26rpx;
  color: #666;
}

/* 当前状态卡片 */
.status-card {
  background: #fff;
  margin-bottom: 24rpx;
  padding: 28rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.status-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.status-value {
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-icon-img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 8rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.temp-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF8C42;
}

.temp-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.status-divider {
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 统计卡片行 */
.stats-row {
  display: flex;
  margin-bottom: 24rpx;
  justify-content: space-between;
}

.stat-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 16rpx;
  border-radius: 20rpx;
  margin: 0 6rpx;
}

.stat-card:first-child {
  margin-left: 0;
}

.stat-card:last-child {
  margin-right: 0;
}

.stat-card.orange {
  background: #FFF3E0;
}

.stat-card.blue {
  background: #E3F2FD;
}

.stat-card.green {
  background: #E8F5E9;
}

.stat-icon-img {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-unit {
  font-size: 22rpx;
  color: #999;
}

/* 详情区域 */
.detail-section {
  background: #fff;
  padding: 28rpx;
  border-radius: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.detail-list {
  display: flex;
  flex-direction: column;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.detail-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.detail-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.detail-time {
  font-size: 24rpx;
  color: #999;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
}
