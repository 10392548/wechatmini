/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  width: 100%;
  overflow-x: hidden;
}
.page-content {
  flex: 1;
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
}
.page-content::-webkit-scrollbar {
  display: none;
}

/* 宠物信息卡片 */
.pet-card {
  background: linear-gradient(135deg, #FF8C00, #FFA500);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.pet-avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}
.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
}
.status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 24rpx;
  height: 24rpx;
  background: #4CAF50;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.pet-info {
  flex: 1;
}
.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}
.pet-status {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}
.battery-info {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.2);
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
}
.battery-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.battery-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

/* 通用卡片样式 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 今日运动 */
.activity-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.activity-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  margin: 0 4rpx;
}
.activity-item.orange {
  background: #FFF3E0;
}
.activity-item.blue {
  background: #E3F2FD;
}
.activity-item.green {
  background: #E8F5E9;
}
.activity-icon-img {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}
.activity-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.activity-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}
.activity-unit {
  font-size: 20rpx;
  color: #999;
}

/* 设备状态 */
.device-status {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}
.device-status-main {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.device-online {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  position: relative;
}
.device-online.online {
  background: #E8F5E9;
}
.device-online.offline {
  background: #FFEBEE;
}
.online-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #4CAF50;
}
.device-online.offline .online-dot {
  background: #9E9E9E;
}
.device-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.device-status-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}
.device-last-online {
  font-size: 22rpx;
  color: #999;
}
.device-current {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx 0;
  background: #fff;
  border-radius: 12rpx;
}
.current-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.current-icon-img {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}
.current-text {
  font-size: 24rpx;
  color: #666;
}
.current-item.temperature {
  border-left: 1rpx solid #eee;
}
.temp-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}
.temp-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 快捷功能 */
.features-grid {
  display: flex;
  justify-content: space-between;
}
.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
}
.feature-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}
.feature-icon-img {
  width: 48rpx;
  height: 48rpx;
}
.feature-name {
  font-size: 24rpx;
  color: #333;
}

/* 最新动态 */
.moment-preview {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
}
.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.moment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.moment-info {
  flex: 1;
}
.moment-nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}
.moment-time {
  font-size: 22rpx;
  color: #999;
}
.moment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.moment-actions {
  display: flex;
}
.moment-action {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}
.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.action-count {
  font-size: 24rpx;
  color: #999;
}

/* 今日记录 */
.diary-list {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
}
.diary-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}
.diary-item:last-child {
  border-bottom: none;
}
.diary-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.diary-icon-img {
  width: 40rpx;
  height: 40rpx;
}
.diary-content {
  flex: 1;
}
.diary-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}
.diary-desc {
  font-size: 24rpx;
  color: #999;
}
.diary-time {
  font-size: 24rpx;
  color: #999;
}
