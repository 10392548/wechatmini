/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  width: 100%;
  overflow-x: hidden;
}
.page-content {
  flex: 1;
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
}
.page-content::-webkit-scrollbar {
  display: none;
}

/* 宠物信息卡片 */
.pet-card {
  background: linear-gradient(135deg, #FF8C00, #FFA500);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.pet-avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}
.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
}
.status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 24rpx;
  height: 24rpx;
  background: #4CAF50;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.pet-info {
  flex: 1;
}
.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}
.pet-status {
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
}
.battery-info {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.2);
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
}
.battery-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.battery-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

/* 通用卡片样式 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 今日数据 */
.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #FF8C00;
}
.stat-unit {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}
.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}
.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #eee;
}

/* 电池状态 */
.battery-card {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
}
.battery-main {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.battery-emoji {
  font-size: 48rpx;
  margin-right: 20rpx;
}
.battery-progress-wrapper {
  flex: 1;
}
.battery-progress-bar {
  height: 20rpx;
  background: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
}
.battery-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  border-radius: 10rpx;
}
.battery-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}
.battery-percent-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
}
.battery-estimate {
  font-size: 24rpx;
  color: #999;
}
.power-usage {
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}
.usage-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.usage-row:last-child {
  margin-bottom: 0;
}
.usage-name {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
}
.usage-bar {
  flex: 1;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  margin: 0 16rpx;
  overflow: hidden;
}
.usage-fill {
  height: 100%;
  border-radius: 6rpx;
}
.usage-fill.blue {
  background: #2196F3;
}
.usage-fill.orange {
  background: #FF9800;
}
.usage-percent {
  font-size: 24rpx;
  color: #999;
  width: 60rpx;
  text-align: right;
}

/* 快捷功能 */
.features-grid {
  display: flex;
  justify-content: space-between;
}
.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
}
.feature-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}
.feature-icon-img {
  width: 48rpx;
  height: 48rpx;
}
.feature-name {
  font-size: 24rpx;
  color: #333;
}

/* 最新动态 */
.moment-preview {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
}
.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.moment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.moment-info {
  flex: 1;
}
.moment-nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}
.moment-time {
  font-size: 22rpx;
  color: #999;
}
.moment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.moment-actions {
  display: flex;
}
.moment-action {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}
.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.action-count {
  font-size: 24rpx;
  color: #999;
}

/* 今日记录 */
.diary-list {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
}
.diary-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}
.diary-item:last-child {
  border-bottom: none;
}
.diary-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.diary-icon-img {
  width: 40rpx;
  height: 40rpx;
}
.diary-content {
  flex: 1;
}
.diary-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}
.diary-desc {
  font-size: 24rpx;
  color: #999;
}
.diary-time {
  font-size: 24rpx;
  color: #999;
}
