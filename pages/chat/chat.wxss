/* 全局样式 */
page {
  height: 100vh;
  background: linear-gradient(180deg, #FFF9F5 0%, #FFF0E8 100%);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

/* 容器 */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 宠物信息卡片 */
.pet-card {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
  backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid rgba(255, 140, 105, 0.1);
  position: relative;
  z-index: 10;
}

/* 头像包装器 */
.pet-avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

/* 头像发光效果 */
.avatar-glow {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-radius: 50%;
  opacity: 0.3;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.5;
  }
}

/* 宠物头像 */
.pet-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 105, 0.2);
  position: relative;
  z-index: 1;
}

/* 在线指示器 */
.online-indicator {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45B649 100%);
  border: 3rpx solid #FFFFFF;
  border-radius: 50%;
  z-index: 2;
  animation: blink 3s ease-in-out infinite;
}

@keyframes blink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* 宠物信息 */
.pet-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pet-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D2D2D;
  letter-spacing: 0.5rpx;
}

.pet-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #8A8A8A;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4CAF50;
  border-radius: 50%;
  animation: blink 3s ease-in-out infinite;
}

/* 消息区域 */
.messages-area {
  flex: 1;
  padding: 32rpx 32rpx 160rpx;
  overflow-y: auto;
}

.messages-area::-webkit-scrollbar {
  display: none;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 消息包装器 */
.message-wrapper {
  animation: messageSlideIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 消息组 */
.message-group {
  display: flex;
  gap: 20rpx;
  max-width: 85%;
}

.message-group.pet-message {
  align-self: flex-start;
}

.message-group.user-message {
  align-self: flex-end;
  flex-direction: row-reverse;
}

/* 消息头像 */
.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

/* 消息内容 */
.message-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.user-message .message-content {
  align-items: flex-end;
}

.pet-message .message-content {
  align-items: flex-start;
}

/* 消息气泡 */
.message-bubble {
  position: relative;
  padding: 24rpx 32rpx;
  border-radius: 32rpx;
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-word;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 宠物消息气泡 */
.pet-bubble {
  background: #FFFFFF;
  border-top-left-radius: 8rpx;
}

/* 用户消息气泡 */
.user-bubble {
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  border-top-right-radius: 8rpx;
}

/* 气泡尾巴 */
.bubble-tail {
  position: absolute;
  top: 0;
  width: 0;
  height: 0;
  border-style: solid;
}

.pet-tail {
  left: -12rpx;
  border-width: 0 16rpx 16rpx 0;
  border-color: transparent #FFFFFF transparent transparent;
}

.user-tail {
  right: -12rpx;
  border-width: 0 0 16rpx 16rpx;
  border-color: transparent transparent transparent #FFB88C;
}

/* 消息文本 */
.message-text {
  font-size: 30rpx;
  line-height: 1.6;
  letter-spacing: 0.3rpx;
}

.pet-bubble .message-text {
  color: #2D2D2D;
}

.user-bubble .message-text {
  color: #FFFFFF;
}

/* 消息时间 */
.message-time {
  font-size: 22rpx;
  color: #B0B0B0;
  padding: 0 8rpx;
}

/* 输入容器 */
.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, rgba(255, 249, 245, 0) 0%, rgba(255, 249, 245, 0.98) 20%, rgba(255, 249, 245, 1) 100%);
  backdrop-filter: blur(20rpx);
  z-index: 100;
}

/* 输入卡片 */
.input-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 12rpx 12rpx 12rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 140, 105, 0.15);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.input-card:active {
  transform: scale(0.98);
}

/* 输入包装器 */
.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
}

/* 消息输入框 */
.message-input {
  width: 100%;
  font-size: 30rpx;
  color: #2D2D2D;
  line-height: 1.5;
}

.input-placeholder {
  color: #B0B0B0;
  font-size: 28rpx;
}

/* 发送按钮 */
.send-button {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #E0E0E0 0%, #D0D0D0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.send-button.active {
  background: linear-gradient(135deg, #FFB88C 0%, #FF8C69 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 105, 0.4);
  transform: scale(1.05);
}

.send-button:active {
  transform: scale(0.95);
}

/* 发送图标 */
.send-icon {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateX(2rpx);
}

.send-button:not(.active) .send-icon {
  color: #B0B0B0;
}
